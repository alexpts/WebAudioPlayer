    <div class="alerts" id="alerts">

    </div>
    <div class="modal" id="register">
      <div class="modal-window" id="register-window">
        <div class="modal-header">
            <div class="modal-name">Register</div>
            <div class="modal-close" onclick="modalClose('register')">Close</div>
        </div>
        <div class="modal-content">
            <form>
              <table class="register_table">
                <tr>
                  <td>Login</td>
                  <td><input type="text"  autocomplete="off"id="register_login_field" name="login"></td>
                </tr>
                <tr>
                  <td>Password</td>
                  <td><input type="password" autocomplete="off" id="register_password_field" name="login"></td>
                </tr>
              </table>
              <input type="button" value="Register" onclick="user.register()" class="button">
            </form>
        </div>
      </div>
    </div>

    <div class="modal" id="login">
      <div class="modal-window" id="login-window">
        <div class="modal-header">
            <div class="modal-name">Login</div>
            <div class="modal-close" onclick="modalClose('login')">Close</div>
        </div>
        <div class="modal-content">
            <form>
              <table class="register_table">
                <tr>
                  <td>Login</td>
                  <td><input type="text" autocomplete="off" id="auth_login_field" name="login"></td>
                </tr>
                <tr>
                  <td>Password</td>
                  <td><input type="password" autocomplete="off" id="auth_password_field" name="login"></td>
                </tr>
              </table>
              <input type="button" value="Log in" onclick="user.auth()" class="button">
            </form>
        </div>
      </div>
    </div>


    <div class="box">
      <div class="header">
        <div class="logo" onclick="load('index')">iBMusic<i class="fa fa-play-circle-o" style="margin-left: 10px" aria-hidden="true"></i></div>
      </div>
      <div class="content">
        <div class="sidebar">
          <ul class="side_menu">
            <li onclick="modalOpen('register')">Sign in</li>
            <li onclick="modalOpen('login')">Log in</li>
            <li onclick="load('audios')">Find music</li>
            <li onclick="load('playlists')">Playlists</li>
            <li>Channels</li>
            <li>About WAP</li>
          </ul>
        </div>
        <div class="main_wrap">
          <audio controls id="player_source" hidden>
            <source id="player_src" src="">
          </audio>
          <div class="player hide_player">
            <div class="player_info">
              <img id="player_photo" src="http://tabs4you.ru/media/images/20/26/7939573466523923.jpg">
            </div>
            <div class="player_control">
              <div class="play playerButton" id="play_button" onclick="playerControl.play()">
                <i class="fa fa-play" aria-hidden="true"></i>
              </div>
              <div class="pervious playerButton" onclick="playerControl.pervious()" >
                <i class="fa fa-step-backward" aria-hidden="true"></i>
              </div>
              <div class="next playerButton" onclick="playerControl.next()">
                <i class="fa fa-step-forward" aria-hidden="true"></i>
              </div>
              <div class="music_bar">
                <div class="song_name">
                  <div class="music_player_group">Alan Walker</div>-
                  <div class="music_player_name">Routine</div>
                  <div class="time" id="player_time">2:42</div>
                </div>
                <div class="time_line" id="timeline">
                  <div class="background_timeline">
                    <div class="current_timeline" id="current_timeline"></div>
                    <div class="expect_timeline" id="timeline_expect"></div>
                  </div>
                </div>
              </div>
              <div class="volume_control"  id="volumeline">
                <div class="background_volume">
                  <div class="current_volume" id="current_volumeline"></div>
                  <div class="expect_volume" id="volumeline_expect"></div>
                </div>
              </div>
              <div class="repeat playerButton" id="repeat_button" onclick="playerControl.repeat()">
                <i class="fa fa-repeat" aria-hidden="true"></i>
              </div>

            </div>
          </div>
          <div class="main">
            {{{body}}}
          </div>
        </div>
      </div>
    </div>
    <script src="/public/js/main.js"></script>
    <script src="/public/js/pages.js"></script>
    <script src="/public/js/player.js"></script>
    <script src="/public/js/audios.js"></script>
    <script src="/public/js/playlists.js"></script>
    <script src="/public/js/modal.js"></script>
    <script src="/public/js/alerts.js"></script>
    <script src="/public/js/user.js"></script>
  </body>
</html>
